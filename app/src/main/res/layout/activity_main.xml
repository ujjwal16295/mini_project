<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:text="EARTHQUAKE"
        android:id="@+id/earthquake"
        android:onClick="OpenEarthquake"
        android:background="#964B00"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:onClick="OpenFlood"
        android:background="#0000FF"
        android:text="FlOOD" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:onClick="OpenFire"
        android:background="#Ff0000"
        android:text="FIRE" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#Ffff00"
        android:onClick="OpenThunderstorm"
        android:text="THUNDERSTORM" />


</LinearLayout>